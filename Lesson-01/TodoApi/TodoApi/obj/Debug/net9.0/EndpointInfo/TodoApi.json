          "title": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "UpdateTodoDto": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "nullable": true
          },
          "isDone": {
            "type": "boolean"
          }
        },
        "additionalProperties": false
      }
    }
